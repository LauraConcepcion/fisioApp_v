.formulario
  = simple_form_for @event do |f|
    = render "shared/error_messages", :target => @event
    %table.table_tabs
      %tr
        %td
          = label_tag "Seleccione el paciente"
          = text_field_tag :search, params[:search],:type=>"hidden"
          = autocomplete_field_tag 'paciente_name', '', tabs_autocomplete_paciente_name_path,:id_element => '#search'
        %td
          = label_tag "Seleccione el especialista"
          = grouped_collection_select(:specialist, :specialist_id, @specialisttypes, :specialist, :name, :id, :name)
        %td
          = label_tag "Seleccione el centro"
          = select_tag 'Centro', options_from_collection_for_select(@centers, 'id', 'name')
        %td
        %td.check
          = label_tag "Â¿Ha asistido?"
          = f.input :attended, :label => false
          - if @event.attended.blank?
            - @event.attended = false  
        %td
          = button_to "Buscar", :action => "find", :controller => 'events'
      %tr
        %td
          = label_tag 'DÃ­a de la cita'
          = text_field_tag :dia, '', :id_element =>'dia',:disabled => true
        %td
          = f.input :starts_at, :as=>:string, :label => "Hora comienzo",:disabled => true      
        %td.mediano{:colspan=>"2"}= f.input :description, :label=>"Observaciones"
        %td
        %td
          = submit_tag 'Guardar'
          = text_field_tag :start,'', :type => "hidden"

